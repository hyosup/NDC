<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:table="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns:core="sap.ui.core">
        <Title  level="H1"
                titleStyle="H1"
                text="My Pay"
                class="sapUiMediumMarginTopBottom sapUiSmallMarginBegin"/>
        <Panel id="panelCSSGrid">
            <headerToolbar>
                <Toolbar height="3rem">
                    <Title text="MY Pay allows you to access your individual Pay Statement, Tax Data, and Bank Information"/>
                </Toolbar>
            </headerToolbar>
            <Text class="sapUiSmallMarginBottom" text="ResponsiveColumnLayout represents a layout which is configured to display a variable number of columns depending on available screen size."/>
            <Text class="sapUiSmallMarginBottom" text="Grid row's height is dynamically determined by the height of the highest grid element on this row." />
            <Text class="sapUiSmallMarginBottom" text="Current breakpoint: {/currentBreakpoint}" width="100%"/>
            <grid:CSSGrid id="grid1">
                <grid:customLayout>
                    <grid:ResponsiveColumnLayout />
                </grid:customLayout>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                        <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4" >
                                <Link text="Pay Statement" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="Access to your remuneration statement allows you to view your current pay statement and pay history." wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                        <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4">
                                <Link text="Bank Information" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="Access to your bank information will allow you to review or request change to your direct deposit information." wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                        <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4">
                                <Link text="Annual Wage History" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="Access to your Annual Wage History will allow you to review your Annual Wage History data." wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                        <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4">
                                <Link text="Expense Reimbursement" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="Access to review reimbursements to you via Finance department. Payments may be searched by month and year." wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                         <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4">
                                <Link text="W2 Statement" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="Access your current W2 and up to two historical W2 statements." wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                         <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4" text="Taxes"></Title>
                            <Label text="Access to your Annual Wage History will allow you to review your Annual Wage History data." wrapping="true" />
                            <Title titleStyle="H4">
                                <Link text="- Federal" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Title titleStyle="H4">
                                <Link text="- State" target="_blank" href="http://www.sap.com" />
                            </Title>
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                         <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4">
                                <Link text="CafÃ© Deduction" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="- Program Status" wrapping="true" />
                            <Label text="- Meal Transactions" wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                <f:Card>
                    <f:layoutData>
                        <grid:ResponsiveColumnItemLayoutData columns="6" rows="4" />
                    </f:layoutData>
                    <f:content>
                         <VBox class="sapUiSmallMargin">
                            <Title titleStyle="H4">
                                <Link text="Total Compensation" target="_blank" href="http://www.sap.com" />
                            </Title>
                            <Label text="Total Compensation will display an overview of pay and benefits received annually." wrapping="true" />
                        </VBox>
                    </f:content>
                </f:Card>
                
            </grid:CSSGrid>
        </Panel>
</core:FragmentDefinition>